{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "checkJs": true, // this line when we import any file in js  this parameter remove the warning
    "sourceMap": false, // allow sourcemap support
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@ui/*": ["src/components/ui/*"],
      "@login/*": ["src/app/login/*"],
      "@dashboard/*": ["src/app/admin/dashboard/*"],
      "@methods/*": ["src/methods/*"],
      "@style/*": ["src/style/*"],
      "@core/*": ["src/components/core/*"],
      "@functions/*": ["src/utils/functions/*"],
      "@utils/*": ["src/utils/*"],
      "@api/*": ["src/utils/api/*"],
      "@interface/*": ["src/interface/*"],
      "@higher-order-components/*": ["src/components/higher-order-components/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
